---
const currentUrl = Astro.url.pathname;
---

<nav>
  <a class={currentUrl === '/' ? 'active' : ''} href="/">Dlaczego?</a>
  <a class={currentUrl === '/about' ? 'active' : ''} href="/about">O mnie</a>
  <a class={currentUrl === '/prices' ? 'active' : ''} href="/prices">Cennik</a>
  <a class={currentUrl === '/my-work' ? 'active' : ''} href="/my-work">Portfolio</a>
  <a class={currentUrl === '/contact' ? 'active' : ''} href="/contact">Kontakt</a>
</nav>

<style>
  nav {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
    padding: 1rem 2rem;

    a {
      color: white;
      text-decoration: none;
      font-size: 24px;
    }

    .active {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
      font-weight: 700;
    }

    a:hover {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
  }
</style>
